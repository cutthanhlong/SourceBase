<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_131B26</item>
        <item name="colorPrimaryVariant">@color/color_131B26</item>
        <item name="colorOnPrimary">@color/color_131B26</item>
        <item name="colorPrimaryDark">@color/color_131B26</item>
        <item name="colorSecondary">@color/color_131B26</item>
        <item name="colorSecondaryVariant">@color/color_131B26</item>
        <item name="colorOnSecondary">@color/color_131B26</item>
        <item name="android:statusBarColor">@color/color_131B26</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>

    <!--dialog exit app-->
    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--Lang-->
    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#00D2E3</item>
        <item name="android:textColorSecondary">#D9D9D9</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/color_000000</item>
    </style>
</resources>
